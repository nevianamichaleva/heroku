extends _layout
block content
 .container
  .row.main
    .panel-heading
      .panel-title.text-center
        h1.title Редакция на профил
        hr
    .main-login.main-center
      form.form-horizontal(method='post', action='/user/profile')
        .form-group
          label.cols-sm-2.control-label(for='name') Име, фамилия:
          .cols-sm-10
            .input-group
              span.input-group-addon
                i.fa.fa-user.fa(aria-hidden='true')
              input#name.form-control(type='text', name='name', value=model.name)
        .form-group
          label.cols-sm-2.control-label(for='email') Е-мейл:
          .cols-sm-10
            .input-group
              span.input-group-addon
                i.fa.fa-envelope.fa(aria-hidden='true')
              input#email.form-control(type='text', name='email', value=model.email)
        .form-group
          label.cols-sm-2.control-label(for='password') Парола:
          .cols-sm-10
            .input-group
              span.input-group-addon
                i.fa.fa-lock.fa-lg(aria-hidden='true')
              input#password.form-control(type='password', name='password', value=model.password)
        .form-group
          label.cols-sm-2.control-label(for='confirm') Потвърдете парола:
          .cols-sm-10
            .input-group
              span.input-group-addon
                i.fa.fa-lock.fa-lg(aria-hidden='true')
              input#confirm.form-control(type='password', name='confirm', value=model.password)
        .form-group
          button.btn.btn-primary.btn-lg.btn-block.register-button(type="submit") 
            | Запис