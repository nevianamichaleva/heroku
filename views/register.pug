extends _layout
block content
 .container
  .row.main
    .panel-heading
      .panel-title.text-center
        h1.title Регистрация
        hr
    if errors  
      ul
        for err in errors
          li!= err.msg
    .main-login.main-center
      form.form-horizontal(method='post', action='/register')
        .form-group
          label.cols-sm-2.control-label(for='name') Име, фамилия
                                                    <span class="red">*</span>
          .cols-sm-10
            .input-group
              span.input-group-addon
                i.fa.fa-user.fa(aria-hidden='true')
              if model
                input#name.form-control(type='text', name='name', value=model.name)
              else   
                input#name.form-control(type='text', name='name', placeholder='Въведете име и фамилия')
        .form-group
          label.cols-sm-2.control-label(for='email') Email
                                                     <span class="red">*</span>
          .cols-sm-10
            .input-group
              span.input-group-addon
                i.fa.fa-envelope.fa(aria-hidden='true')
              if model
                input#email.form-control(type='text', name='email', value=model.email)
              else
                input#email.form-control(type='text', name='email', placeholder='Въведете вашия Email')  
        .form-group
          label.cols-sm-2.control-label(for='username') Потребителско име
                                                        <span class="red">*</span>
          .cols-sm-10
            .input-group
              span.input-group-addon
                i.fa.fa-users.fa(aria-hidden='true')
              if model
                input#username.form-control(type='text', name='username', value=model.username)
              else
                input#username.form-control(type='text', name='username', placeholder='Въведете вашето потребителско име')  
        .form-group
          label.cols-sm-2.control-label(for='password') Парола
                                                        <span class="red">*</span>
          .cols-sm-10
            .input-group
              span.input-group-addon
                i.fa.fa-lock.fa-lg(aria-hidden='true')
              input#password.form-control(type='password', name='password', placeholder='Въведете парола')
        .form-group
          label.cols-sm-2.control-label(for='confirm') Потвърдете парола
                                                       <span class="red">*</span>
          .cols-sm-10
            .input-group
              span.input-group-addon
                i.fa.fa-lock.fa-lg(aria-hidden='true')
              input#confirm.form-control(type='password', name='confirm', placeholder='Потвърдете вашата парола')
        .form-group
          button.btn.btn-primary.btn-lg.btn-block.register-button(type="submit") Регистрация
        .form-group.social
          button.btn.btn-primary.btn-lg.btn-social-icon.btn-twitter
            span.fa.fa-twitter
          button.btn.btn-primary.btn-lg.btn-social-icon.btn-facebook
            span.fa.fa-facebook
          button.btn.btn-primary.btn-lg.btn-social-icon.btn-linkedin
            span.fa.fa-linkedin